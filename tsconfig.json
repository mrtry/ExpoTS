{
    "compilerOptions": {
        "module": "es2015",
        "target": "es2015",
        "jsx": "react-native",
        "rootDir": "src",
        "outDir": "artifacts",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "moduleResolution": "Node"
    },
    "filesGlob": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "node_modules/typescript/lib/lib.es6.d.ts"
    ],
    "types": [
        "react",
        "react-dom",
        "react-native"
    ],
    "exclude": [
        "artifacts",
        "node_modules",
        "jest.config.js",
        "App.js"
    ],
    "compileOnSave": false
}